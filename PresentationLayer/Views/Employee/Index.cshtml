@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>
<br />
<br />

<a asp-action="Create" asp-controller="Employee" class="btn btn-primary">Create New Employee</a>
<br />
<br />
<br />
@if(Model.Count() > 0)
{
    <table class="table table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(D => D.Name)</th>
            <th>@Html.DisplayNameFor(D => D.Age)</th>
            <th>@Html.DisplayNameFor(D => D.Address)</th>
            <th>@Html.DisplayNameFor(D => D.Salary)</th>
            <th>@Html.DisplayNameFor(D => D.IsActive)</th>
            <th>@Html.DisplayNameFor(D => D.Email)</th>
            <th>@Html.DisplayNameFor(D => D.PhoneNumber)</th>
            <th>@Html.DisplayNameFor(D => D.HireDate)</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>


        </tr>
    </thead>

    <tbody>
            @foreach(var Employee in Model)
            {
                <tr>
                    <td>@Employee.Name</td>
                    <td>@Employee.Age</td>
                    <td>@Employee.Address</td>
                    <td>@Html.DisplayFor(M =>@Employee.Salary)</td>
                   @* <td>@Employee.Salary</td>*@
                    <td>@Html.DisplayFor(M =>@Employee.IsActive)</td>
                    <td>@Html.DisplayFor(M =>@Employee.Email)</td>

                    @*<td>@Employee.IsActive</td>
                    <td>@Employee.Email</td>*@
                    <td>@Employee.PhoneNumber</td>
                    <td>@Employee.HireDate</td>

                    <td><a asp-action="Details" asp-controller="Employee" asp-route-id="@Employee.Id" class="btn btn-success">
                        <i class="fas fa-eye"></i>Details</a>
                        </td>
                    <td><a asp-action="Edit" asp-controller="Employee" asp-route-id="@Employee.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i>Update</a>
                        </td>
                    <td><a asp-action="Delete" asp-controller="Employee" asp-route-id="@Employee.Id" class="btn btn-danger">
                        <i class="fas fa-trash"></i>Delete</a>
                        </td>


                </tr>
            }
        </tbody>

    </table>
}else
{
    <div class="mt-4 alert alert-danger">
        <h4>This is No Employees !!</h4>
    </div>
}



