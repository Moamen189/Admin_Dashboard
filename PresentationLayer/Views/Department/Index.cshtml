@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>All Departments</h1>
<br />
<br />

<a asp-action="Create" asp-controller="Department" class="btn btn-primary">Create New Department</a>
<br />
<br />
<br />
@*<div class="alert alert-danger">
    @ViewData["Message"]
</div>

<div class="mb-3 alert alert-danger">
    @ViewBag.Messages
</div>*@

@if(TempData["Message"] != null)
{
<div class="mb-3 alert alert-danger">
    @TempData["Message"]
</div>
}
@if(Model.Count() > 0)
{
    <table class="table table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(D => D.Code)</th>
            <th>@Html.DisplayNameFor(D => D.Name)</th>
            <th>@Html.DisplayNameFor(D => D.DateOfCreation)</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>


        </tr>
    </thead>

    <tbody>
            @foreach(var Department in Model)
            {
                <tr>
                    <td>@Department.Code</td>
                    <td>@Department.Name</td>
                    <td>@Department.DateOfCreation</td>
                    <td><a asp-action="Details" asp-controller="Department" asp-route-id="@Department.Id" class="btn btn-success">
                        <i class="fas fa-eye"></i>Details</a>
                        </td>
                    <td><a asp-action="Edit" asp-controller="Department" asp-route-id="@Department.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i>Update</a>
                        </td>
                    <td><a asp-action="Delete" asp-controller="Department" asp-route-id="@Department.Id" class="btn btn-danger">
                        <i class="fas fa-trash"></i>Delete</a>
                        </td>


                </tr>
            }
        </tbody>

    </table>
}else
{
    <div class="mt-4 alert alert-danger">
        <h4>This is No Department</h4>
    </div>
}



